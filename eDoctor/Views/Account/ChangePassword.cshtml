@model ChangePasswordViewModel

<div class="container my-5">
    <div class="card w-50 mx-auto">
        <div class="card-body">
            <h2 class="card-title text-center">CHANGE PASSWORD</h2>

            <form method="post" asp-controller="Account" asp-action="ChangePassword">
                <div class="mb-3">
                    <label class="form-label" asp-for="OldPassword"></label>
                    <input class="form-control" type="password" asp-for="OldPassword" />
                    <span class="text-danger" asp-validation-for="OldPassword"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="NewPassword"></label>
                    <input class="form-control" type="password" asp-for="NewPassword" />
                    <span class="text-danger" asp-validation-for="NewPassword"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="ConfirmPassword"></label>
                    <input class="form-control" type="password" asp-for="ConfirmPassword" />
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>

                <button class="btn btn-primary w-100" type="submit">CHANGE</button>
            </form>
        </div>
    </div>
</div>
