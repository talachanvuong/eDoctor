@model BillViewModel

@{
    ViewData["UseContainer"] = true;
}

<div class="d-flex align-items-center gap-2 mb-3">
    <a class="btn btn-sm btn-light border rounded-pill" onclick="history.back()">
        <i class="bi bi-arrow-left me-1"></i>Back
    </a>
    <h6 class="mb-0 fw-bold">Order Confirmation</h6>
</div>

<div class="card border-0 shadow-sm rounded-4 overflow-hidden">
    <div class="px-4 py-4 text-white" style="background: linear-gradient(135deg, #1a73e8, #0d47a1);">
        <div class="d-flex align-items-center gap-2 mb-1">
            <i class="bi bi-receipt fs-5"></i>
            <span class="fw-semibold">Invoice</span>
        </div>
        <p class="mb-0 opacity-75 small">@Model.Note</p>
    </div>

    <div style="border-bottom: 2px dashed #dee2e6; margin: 0 1.5rem;"></div>

    <div class="px-4 py-3">
        @foreach (var item in Model.Services)
        {
            <div class="d-flex justify-content-between align-items-center py-3 border-bottom">
                <div class="d-flex align-items-center gap-3">
                    <div class="bg-primary-subtle rounded-3 p-2 d-flex align-items-center justify-content-center" style="width: 36px; height: 36px; flex-shrink: 0;">
                        <i class="bi bi-clipboard2-pulse text-primary"></i>
                    </div>
                    <span class="fw-semibold">@item.ServiceName</span>
                </div>
                <span class="fw-semibold">@item.Price.ToString("C")</span>
            </div>
        }

        <div class="d-flex justify-content-between align-items-center pt-3">
            <span class="fw-bold fs-6">Total</span>
            <span class="fw-bold fs-5 text-primary">@Model.Total.ToString("C")</span>
        </div>
    </div>

    <div class="card-footer bg-white border-top px-4 py-3 d-flex justify-content-end">
        <div id="paypal-button-container"></div>
    </div>
</div>

<form id="antiForgeryForm">
    @Html.AntiForgeryToken()
</form>

<script
    src="https://www.paypal.com/sdk/js?client-id=@ViewBag.ClientId&buyer-country=US&currency=USD&components=buttons&disable-funding=venmo,paylater,card"
    data-sdk-integration-source="developer-studio">
</script>

<script>
    const token = document.querySelector('#antiForgeryForm input[name="__RequestVerificationToken"]').value;

    const model = {
        scheduleId: @Model.ScheduleId,
        services: @Html.Raw(Json.Serialize(Model.Services)),
        total: @Model.Total
    };

    window.paypal.Buttons({
        style: { shape: "pill", layout: "vertical", color: "blue", label: "paypal" },

        createOrder: async () => {
            const res = await fetch("/Home/CreateOrder", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                    "RequestVerificationToken": token
                },
                credentials: "include",
                body: JSON.stringify({ total: model.total })
            });

            const { data, message } = await res.json();
            if (!res.ok) throw new Error(message);
            return data.orderId;
        },

        onApprove: async ({ orderID }) => {
            const res = await fetch("/Home/Capture", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                    "RequestVerificationToken": token
                },
                credentials: "include",
                body: JSON.stringify({ scheduleId: model.scheduleId, orderId: orderID, services: model.services })
            });

            if (!res.ok) {
                const { message } = await res.json();
                throw new Error(message);
            }

            window.location.href = "/Home/Index";
        },

        onError: (err) => {
            alert(err.message);
        }
    }).render("#paypal-button-container");
</script>
