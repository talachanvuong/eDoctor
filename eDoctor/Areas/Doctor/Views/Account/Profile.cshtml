@model ProfileViewModel

@{
    ViewData["UseContainer"] = true;
}

<form class="row" method="post" enctype="multipart/form-data" asp-controller="Account" asp-action="Profile">
    <div class="col-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="alert alert-danger mb-3" asp-validation-summary="ModelOnly"></div>

                <input type="hidden" asp-for="Info.Avatar" />

                <div class="mb-3">
                    <img class="full-image rounded-circle d-block mx-auto" src="@Model.Info.Avatar" style="width: 180px; height: 180px;" />
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Info.AvatarFile"></label>
                    <input class="form-control" type="file" asp-for="Info.AvatarFile" />
                    <span class="text-danger" asp-validation-for="Info.AvatarFile"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Info.FullName"></label>
                    <input class="form-control" type="text" asp-for="Info.FullName" />
                    <span class="text-danger" asp-validation-for="Info.FullName"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Info.BirthDate"></label>
                    <input class="form-control" type="date" asp-for="Info.BirthDate" />
                    <span class="text-danger" asp-validation-for="Info.BirthDate"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Info.Gender"></label>
                    <select class="form-select" asp-for="Info.Gender">
                        <option value="false">Male</option>
                        <option value="true">Female</option>
                    </select>
                    <span class="text-danger" asp-validation-for="Info.Gender"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Info.RankCode"></label>
                    <input class="form-control" type="text" asp-for="Info.RankCode" readonly />
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Info.YearsOfExperience"></label>
                    <input class="form-control" type="number" asp-for="Info.YearsOfExperience" />
                    <span class="text-danger" asp-validation-for="Info.YearsOfExperience"></span>
                </div>

                <div>
                    <label class="form-label" asp-for="Info.DepartmentName"></label>
                    <input class="form-control" type="text" asp-for="Info.DepartmentName" readonly />
                </div>
            </div>
        </div>
    </div>

    <div class="col-8">
        <div class="card shadow-sm">
            <div class="card-body">
                @for (int i = 0; i < Model.Introductions.Count; i++)
                {
                    <input type="hidden" asp-for="Introductions[i].SectionId" />
                    <input type="hidden" asp-for="Introductions[i].SectionTitle" />

                    <div class="mb-3">
                        <label class="form-label fw-semibold">@Model.Introductions[i].SectionTitle</label>
                        <textarea class="form-control" rows="4" asp-for="Introductions[i].Content"></textarea>
                        <span class="text-danger" asp-validation-for="Introductions[i].Content"></span>
                    </div>
                }

                <button class="btn btn-primary w-100" type="submit">UPDATE</button>
            </div>
        </div>
    </div>
</form>
